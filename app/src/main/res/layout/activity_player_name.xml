<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".PlayerName">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/app_name_screen"
        android:textColor="@color/light_purple"
        android:textSize="50sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/playerNameEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/enter_your_name"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/light_purple"
        android:textColorHint="@color/mid_purple"
        android:maxLength="24"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/starGameBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_blue_btn"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/start"
        android:textColor="@color/dark_back"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
